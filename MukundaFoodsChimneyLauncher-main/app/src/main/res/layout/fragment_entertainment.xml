<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entertainment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#333333"
    android:clickable="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ott_app_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/settings_item_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.42">


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ott_heading">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/youtube"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/youtube" />

                <ImageButton
                    android:id="@+id/netflix"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/netflix" />

                <ImageButton
                    android:id="@+id/prime"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/prime"
                />

                <ImageButton
                    android:id="@+id/hotstar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/hotstar" />

                <ImageButton
                    android:id="@+id/sonyliv"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/sony" />

                <ImageButton
                    android:id="@+id/zee"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/zee"
                    android:visibility="gone" />


            </LinearLayout>

        </HorizontalScrollView>


        <TextView
            android:id="@+id/ott_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="OTT App"
            android:textColor="#968B7E"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cooking_app_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/settings_item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ott_app_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.42">


        <TextView
            android:id="@+id/cooking_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Music &amp; Audio"
            android:textColor="#968B7E"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cooking_heading">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/youtube_music"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/youtubemusic" />

                <ImageButton
                    android:id="@+id/spotify"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/spotify" />


                <ImageButton
                    android:id="@+id/saavan"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/saavan" />

                <ImageButton
                    android:id="@+id/gaana"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/gaana" />

                <ImageButton
                    android:id="@+id/wynk"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/wynk"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/amazon_music"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/amazon_music" />


            </LinearLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/music_app_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/settings_item_background"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ott_app_layout"
        app:layout_constraintWidth_percent="0.42">

        <TextView
            android:id="@+id/music_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Food &amp; Beverages"
            android:textColor="#968B7E"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/music_heading">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/music_heading">

                <ImageButton
                    android:id="@+id/zomato"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/zomato" />

                <ImageButton
                    android:id="@+id/licious"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/licious" />

                <ImageButton
                    android:id="@+id/swiggy"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/swiggy" />

                <ImageButton
                    android:id="@+id/amazon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="gone"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/amazon" />

                <ImageButton
                    android:id="@+id/zepto_app"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/zepto" />

                <ImageButton
                    android:id="@+id/blink_it"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/blink_it" />


                <ImageButton
                    android:id="@+id/music5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/bigbasket"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toEndOf="@id/swiggy"
                    app:layout_constraintTop_toBottomOf="@id/music_heading" />
            </LinearLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/other_app_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/settings_item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@id/music_app_layout"
        app:layout_constraintTop_toTopOf="@id/music_app_layout"
        app:layout_constraintWidth_percent="0.42">

        <TextView
            android:id="@+id/other_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Other App"
            android:textColor="#968B7E"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/other_heading">

            <ImageButton
                android:id="@+id/keep"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/googlenotes" />

            <ImageButton
                android:id="@+id/google_news"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/news" />

            <ImageButton
                android:id="@+id/chrome"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/chrome" />

            <ImageButton
                android:id="@+id/calendar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/calender"
                android:visibility="gone" />


            <ImageButton
                android:id="@+id/lpg"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/bookmylpg" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qr_code_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/no_internet_text"
            android:layout_width="1000dp"
            android:layout_height="600dp"
            android:background="@drawable/no_internet"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/qr_code"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:background="@drawable/white_background_qr_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qr_code_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_extrabold"
                android:text="Scan the QR Code to\n Complete the Set up Process"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/qr_code_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/qr_code_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>