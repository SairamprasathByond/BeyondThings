        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Modes And Speed"
            android:textAllCaps="false"
            android:textColor="#C9B7A2"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fan_controller" />
        <TextView
            android:id="@+id/turbo_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turbo Mode is On"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:background="@drawable/message_turbo_background"
            android:padding="12dp"
            android:gravity="center"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

