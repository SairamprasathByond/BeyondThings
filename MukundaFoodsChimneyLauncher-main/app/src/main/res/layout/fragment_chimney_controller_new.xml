    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/brightness_and_cooking_time"
        android:layout_width="0dp"
        android:layout_height="338dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight=".5"
        app:layout_constraintStart_toEndOf="@id/fan_layout"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/brightness_layout"
            android:layout_width="394dp"
            android:layout_height="114dp"
            android:background="@drawable/brightness_layout_background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/brightness_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Chimney Light - Off"
                android:textColor="#E4D3BE"
                android:textSize="24dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/brightness_image"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/brightness_image_selector" />

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/brightness_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:max="3"
                    android:padding="0dp"
                    android:theme="@style/MySeekBar" />

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/fan_off_timer"
            android:layout_width="138dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@id/cooking_off_timer"
            app:layout_constraintStart_toStartOf="@id/brightness_layout"
            app:layout_constraintTop_toBottomOf="@id/brightness_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="Auto-Off"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:layout_width="134dp"
                    android:layout_height="134dp">

                    <com.mukundafoods.chimneylauncherproduct.ui.animation.fanandcookingbackground.FanAndCookingCircleBackground
                        android:id="@+id/fan_background"
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:layout_centerInParent="true" />

                    <com.mukundafoods.chimneylauncherproduct.ui.animation.fanandcooking.FanAndCookingCircle
                        android:id="@+id/fan_circle"
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:layout_centerInParent="true" />


                    <ImageView
                        android:id="@+id/fan_inner_circle"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/cooking_timer_inner_circle" />

                    <ImageView
                        android:id="@+id/fan_inner_most_circle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/cooking_timer_inner_most_circle" />


                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fan Auto Off"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/fan_countdown_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <NumberPicker
                        android:id="@+id/fan_auto_off_number_picker"
                        style="@style/NumberPickerText"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:descendantFocusability="blocksDescendants"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:scrollbarSize="100dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fan_timer_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/start_button_selector"
                android:fontFamily="@font/poppins_medium"
                android:text="Start"
                android:textColor="#D7C9B9"
                android:textSize="18dp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/cooking_off_timer"
            android:layout_width="138dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/brightness_layout"
            app:layout_constraintStart_toEndOf="@id/fan_off_timer"
            app:layout_constraintTop_toBottomOf="@id/brightness_layout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_horizontal"
                android:text="Timer"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <RelativeLayout
                    android:layout_width="134dp"
                    android:layout_height="134dp">

                    <com.mukundafoods.chimneylauncherproduct.ui.animation.fanandcookingbackground.FanAndCookingCircleBackground
                        android:id="@+id/cooking_background"
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:layout_centerInParent="true" />


                    <com.mukundafoods.chimneylauncherproduct.ui.animation.fanandcooking.FanAndCookingCircle
                        android:id="@+id/cooking_circle"
                        android:layout_width="134dp"
                        android:layout_height="134dp"
                        android:layout_centerInParent="true" />


                    <ImageView
                        android:id="@+id/cooking_inner_circle"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/cooking_timer_inner_circle" />

                    <ImageView
                        android:id="@+id/cooking_inner_most_circle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/cooking_timer_inner_most_circle" />


                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fan Auto Off"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/cooking_countdown_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/whistle_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <NumberPicker
                        android:id="@+id/cooking_auto_off_number_picker"
                        style="@style/NumberPickerText"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:descendantFocusability="blocksDescendants"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:scrollbarSize="100dp" />


                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cooking_timer_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/start_button_selector"
                android:fontFamily="@font/poppins_medium"
                android:text="Start"
                android:textColor="#D7C9B9"
                android:textSize="18dp" />

        </FrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qr_code_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:clickable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/no_internet_text"
            android:layout_width="1000dp"
            android:layout_height="600dp"
            android:background="@drawable/no_internet"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/qr_code"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:background="@drawable/white_background_qr_code"
