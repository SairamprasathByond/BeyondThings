<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="textAllCaps">false</item>
        <item name="height">60dp</item>
    </style>

    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabMaxWidth">600dp</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:background">@drawable/white_background_frame</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="tabTextColor">@color/black</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:progressBackgroundTint">#FFFAF3</item>
        <item name="android:progressTint">#FFFAF3</item>
        <item name="android:thumbTint">#E4D3BE</item>
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>

    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>